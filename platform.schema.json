{
    "plugin_alias": "Nest",
    "schema": {
        "type": "object",
        "properties": {
            "platform": {
                "title": "Platform",
                "type": "string",
                "const": "Nest",
                "readOnly": true
            },
            "email": {
                "title": "Nest Email",
                "type": "string",
                "required": true
            },
            "password": {
                "title": "Nest Password",
                "type": "string",
                "required": true,
                "options": {
                    "hidden": true
                }
            },
            "pin": {
                "title": "Multi-Factor PIN",
                "type": "number"
            },
            "googleAuth": {
                "type": "object",
                "properties": {
                    "issueToken": {
                        "title": "Issue Token URL",
                        "type": "string"
                    },
                    "cookies": {
                        "title": "Cookie Value",
                        "type": "string"
                    },
                    "apiKey": {
                        "title": "API Key",
                        "type": "string"
                    }
                }
            }
        }
    }
}
